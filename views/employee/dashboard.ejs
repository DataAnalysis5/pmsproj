<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Dashboard - Performance Management System</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <% if (user) { %>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">
                <h2>PMS - <%= user.role.toUpperCase() %></h2>
            </div>
            <div class="nav-menu">
                <span class="nav-user">
                    <i class="fas fa-user"></i>
                    <%= user.name %> (<%= user.employeeId %>)
                </span>
                <form action="/auth/logout" method="POST" style="display: inline;" onsubmit="return handleLogout(this)">
                    <button type="submit" class="btn btn-outline">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </form>
            </div>
        </div>
    </nav>
    <% } %>

    <main class="main-content">
        <div class="dashboard">
            <div class="dashboard-header">
                <h1>My Performance Dashboard</h1>
                <div class="employee-info">
                    <p><strong>Employee ID:</strong> <%= employee.employeeId %></p>
                    <p><strong>Department:</strong> <%= employee.department ? employee.department.name : 'Not Assigned' %></p>
                    <p><strong>Current Quarter:</strong> <%= currentQuarter %></p>
                </div>
            </div>

             Self Assessment Card 
            <div class="stats-grid">
                <div class="stat-card" style="grid-column: span 2;">
                    <div class="stat-icon">
                        <i class="fas fa-user-check"></i>
                    </div>
                    <div class="stat-content">
                        <h3>Self Assessment</h3>
                        <p>
                          <% if (selfAssessment) { %>
                            Submitted on <%= new Date(selfAssessment.updatedAt || selfAssessment.createdAt).toLocaleString() %>
                          <% } else { %>
                            Not submitted for <%= currentQuarter %>
                          <% } %>
                        </p>
                        <div style="margin-top: 8px; display:flex; gap:8px; flex-wrap:wrap;">
                            <button class="btn btn-primary" onclick="openSelfAssessmentModal()">
                              <i class="fas fa-pen"></i> <%= selfAssessment ? 'Edit Self Assessment' : 'Start Self Assessment' %>
                            </button>
                        </div>
                    </div>
                </div>

                 Existing stat cards 
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-star"></i>
                    </div>
                    <div class="stat-content">
                        <h3><%= avgRating %>/6</h3>
                        <p>Average Rating</p>
                        <small class="performance-level">
                            <%= getPerformanceLevel(parseFloat(avgRating)) %>
                        </small>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                    <div class="stat-content">
                        <h3><%= totalReviews %></h3>
                        <p>Total Reviews</p>
                    </div>
                </div>
                
                <div class="stat-card <%= currentQuarterData ? '' : 'stat-warning' %>">
                    <div class="stat-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <div class="stat-content">
                        <h3><%= currentQuarterData ? currentQuarterData.avgScore + '/6' : 'N/A' %></h3>
                        <p>Current Quarter (<%= currentQuarter %>)</p>
                        <% if (currentQuarterData) { %>
                            <small class="performance-level">
                                <%= getPerformanceLevel(currentQuarterData.avgScore) %>
                            </small>
                        <% } %>
                    </div>
                </div>
                
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <div class="stat-content">
                        <h3><%= performanceTrend.filter(t => t.score !== null).length %></h3>
                        <p>Quarters Reviewed</p>
                    </div>
                </div>
            </div>
            
            <div class="dashboard-grid">
                <div class="dashboard-card">
                    <h3>Current Quarter Review</h3>
                    <% if (currentQuarterData && currentQuarterData.reviews.length > 0) { %>
                        <div class="current-review">
                            <div class="review-score-display">
                                <span class="score-number"><%= currentQuarterData.avgScore %>/6</span>
                                <div class="stars-display">
                                    <% for (let i = 1; i <= 6; i++) { %>
                                        <% if (i <= Math.round(currentQuarterData.avgScore)) { %>
                                            ★
                                        <% } else { %>
                                            ☆
                                        <% } %>
                                    <% } %>
                                </div>
                                <div class="performance-badge">
                                    <span class="level-badge level-<%= getPerformanceLevel(currentQuarterData.avgScore).toLowerCase().replace(' ', '-') %>">
                                        <%= getPerformanceLevel(currentQuarterData.avgScore) %>
                                    </span>
                                </div>
                            </div>
                            <div class="review-details">
                                <p><strong>Number of Reviews:</strong> <%= currentQuarterData.reviewCount %></p>
                                <p><strong>Latest Review Date:</strong> <%= new Date(currentQuarterData.reviews[0].reviewDate).toLocaleDateString() %></p>
                                <div class="review-comments">
                                    <h4>Latest Comments:</h4>
                                    <p><%= currentQuarterData.reviews[0].comments %></p>
                                </div>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="no-review">
                            <i class="fas fa-clock"></i>
                            <p>No review submitted for <%= currentQuarter %> yet</p>
                        </div>
                    <% } %>
                </div>
                
                <div class="dashboard-card">
                    <h3>Performance Trend</h3>
                    <div class="performance-chart">
                        <% performanceTrend.forEach(trend => { %>
                            <div class="trend-item <%= trend.score ? '' : 'no-data' %>">
                                <span class="trend-quarter"><%= trend.quarter %></span>
                                <div class="trend-score">
                                    <% if (trend.score) { %>
                                        <span class="score"><%= trend.score %>/6</span>
                                        <div class="score-bar">
                                            <div class="score-fill" style="width: <%= (trend.score / 6) * 100 %>%"></div>
                                        </div>
                                        <span class="performance-mini-badge">
                                            <%= getPerformanceLevel(trend.score).split(' ')[0] %>
                                        </span>
                                    <% } else { %>
                                        <span class="no-score">No Review</span>
                                    <% } %>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
                
                <div class="dashboard-card">
                    <h3>Review History</h3>
                    <div class="review-history">
                        <% allReviews.forEach(review => { %>
                            <div class="history-item">
                                <div class="history-header">
                                    <span class="history-quarter"><%= review.quarter %></span>
                                    <span class="history-score"><%= review.overallScore || review.score || 'N/A' %>/6 ⭐</span>
                                </div>
                                <div class="history-date">
                                    <%= new Date(review.reviewDate).toLocaleDateString() %>
                                </div>
                                <div class="history-reviewer">
                                    <strong>Reviewed by:</strong> <%= review.reviewer.name %>
                                </div>
                                <div class="performance-level-display">
                                    <span class="level-badge level-<%= getPerformanceLevel(review.overallScore || review.score || 0).toLowerCase().replace(' ', '-') %>">
                                        <%= getPerformanceLevel(review.overallScore || review.score || 0) %>
                                    </span>
                                </div>
                                <% if (review.answers && review.answers.length > 0) { %>
                                    <div class="category-breakdown">
                                        <h5>Category Breakdown:</h5>
                                        <% review.answers.forEach(answer => { %>
                                            <div class="category-item">
                                                <span class="category-name">
                                                    <%= answer.question ? answer.question.category.replace('_', ' ').toUpperCase() : 'UNKNOWN' %>
                                                </span>
                                                <span class="category-score"><%= (answer.rating || 0) %>/6</span>
                                                <div class="category-bar">
                                                    <div class="category-fill" style="width: <%= ((answer.rating || 0) / 6) * 100 %>%"></div>
                                                </div>
                                            </div>
                                        <% }) %>
                                    </div>
                                <% } %>
                                <div class="history-comments">
                                    <p><%= review.comments %></p>
                                </div>
                            </div>
                        <% }) %>
                        <% if (allReviews.length === 0) { %>
                            <p>No reviews yet</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

     Self Assessment Modal 
    <div id="selfAssessmentModal" class="modal">
      <div class="modal-content" style="max-width: 800px;">
        <div class="modal-header">
          <h3>Self Assessment - <%= currentQuarter %></h3>
          <span class="close" onclick="closeSelfAssessmentModal()">&times;</span>
        </div>
        <form id="selfAssessmentForm" class="review-form">
          <div class="employee-details">
              <h4><%= employee.name %> (<%= employee.employeeId %>)</h4>
              <p>Department: <%= employee.department ? employee.department.name : 'Not Assigned' %></p>
          </div>

          <% if (selfQuestions && selfQuestions.length > 0) { %>
            <div id="selfQuestionsContainer" class="questions-container">
              <% selfQuestions.forEach((q) => { %>
                <div class="question-group" data-qid="<%= q._id %>">
                  <label class="question-label"><%= q.text %></label>
                  <span class="question-category category-<%= q.category %>">
                    <%= q.category.replace('_',' ').toUpperCase() %>
                  </span>
                  <% if (q.inputType === 'mcq') { %>
                    <div class="rating-selector">
                      <% (q.options || []).forEach((opt, idx) => { %>
                        <label class="rating-option">
                            <input type="radio" name="self_question_<%= q._id %>" value="<%= opt %>">
                            <span class="rating-text"><%= opt %></span>
                        </label>
                      <% }) %>
                    </div>
                  <% } else if (q.inputType === 'text') { %>
                    <div class="form-group" style="margin-top: 8px;">
                      <textarea name="self_question_<%= q._id %>_text" rows="3" placeholder="Your response..."></textarea>
                    </div>
                  <% } else { %>
                    <div class="rating-selector">
                      <% for (let rating = 1; rating <= 6; rating++) { %>
                        <label class="rating-option">
                          <input type="radio" name="self_question_<%= q._id %>_rating" value="<%= rating %>">
                          <span class="rating-text"><%= rating %></span>
                        </label>
                      <% } %>
                    </div>
                  <% } %>
                </div>
              <% }) %>
            </div>
          <% } else { %>
            <div class="no-questions">
              <p>No self-assessment questions available. Please contact admin.</p>
            </div>
          <% } %>

          <div class="form-group">
              <label for="self_comments">Overall Comments</label>
              <textarea id="self_comments" name="self_comments" rows="4" required placeholder="Summarize your work, achievements, challenges..."></textarea>
          </div>

          <div class="form-actions">
              <button type="button" class="btn btn-outline" onclick="closeSelfAssessmentModal()">Cancel</button>
              <button type="submit" class="btn btn-primary">Save Self Assessment</button>
          </div>
        </form>
      </div>
    </div>

    <script src="/js/main.js"></script>
    <script>
    function handleLogout(form) {
        const button = form.querySelector('button');
        const originalText = button.innerHTML;
        button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Logging out...';
        button.disabled = true;
        return true;
    }

    // Helper function to get performance level
    function getPerformanceLevel(score) {
        if (score >= 6) return 'Outstanding Performance';
        if (score >= 5) return 'Superior Performance';
        if (score >= 4) return 'Effective Performance';
        if (score >= 3) return 'Standard Performance';
        if (score >= 2) return 'Developing Performance';
        return 'Ineffective Performance';
    }

    // Self Assessment Modal logic
    function openSelfAssessmentModal() {
      const modal = document.getElementById('selfAssessmentModal');
      // Prefill any existing responses
      <% if (selfAssessment) { %>
        const existing = <%- JSON.stringify(selfAssessment) %>;
        if (existing && existing.answers) {
          existing.answers.forEach(a => {
            if (a.question && a.question.inputType === 'mcq' && a.responseOption) {
              const name = 'self_question_' + a.question._id;
              const input = document.querySelector('input[name="' + name + '"][value="' + a.responseOption.replace(/"/g,'\\"') + '"]');
              if (input) input.checked = true;
            } else if (a.question && a.question.inputType === 'text' && a.responseText) {
              const name = 'self_question_' + a.question._id + '_text';
              const ta = document.querySelector('textarea[name="' + name + '"]');
              if (ta) ta.value = a.responseText;
            } else if (a.question && a.question.inputType === 'rating' && a.rating) {
              const name = 'self_question_' + a.question._id + '_rating';
              const input = document.querySelector('input[name="' + name + '"][value="' + a.rating + '"]');
              if (input) input.checked = true;
            }
          });
        }
        if (existing && existing.comments) {
          const c = document.getElementById('self_comments');
          if (c) c.value = existing.comments;
        }
      <% } %>
      modal.style.display = 'block';
    }

    function closeSelfAssessmentModal() {
      const modal = document.getElementById('selfAssessmentModal');
      modal.style.display = 'none';
      document.getElementById('selfAssessmentForm').reset();
    }

    document.getElementById('selfAssessmentForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      const form = e.target;
      const answers = [];

      <% if (selfQuestions && selfQuestions.length > 0) { %>
        <% selfQuestions.forEach((q) => { %>
          (function(){
            const qid = "<%= q._id %>";
            const inputType = "<%= q.inputType %>";
            if (inputType === 'mcq') {
              const sel = form.querySelector('input[name="self_question_' + qid + '"]:checked');
              if (sel) {
                answers.push({
                  question: qid,
                  responseOption: sel.value
                });
              }
            } else if (inputType === 'text') {
              const ta = form.querySelector('textarea[name="self_question_' + qid + '_text"]');
              if (ta && ta.value.trim()) {
                answers.push({
                  question: qid,
                  responseText: ta.value.trim()
                });
              }
            } else { // rating
              const sel = form.querySelector('input[name="self_question_' + qid + '_rating"]:checked');
              if (sel) {
                answers.push({
                  question: qid,
                  rating: parseInt(sel.value, 10)
                });
              }
            }
          })();
        <% }) %>
      <% } %>

      const comments = form.self_comments.value;

      if (!comments || comments.trim().length < 5) {
        alert('Please provide overall comments (at least 5 characters).');
        return;
      }

      try {
        const resp = await fetch('/employee/self-assessment', {
          method: 'POST',
          headers: {'Content-Type': 'application/json'},
          body: JSON.stringify({ answers, comments })
        });
        const result = await resp.json();
        if (result.success) {
          alert('Self assessment saved successfully!');
          location.reload();
        } else {
          alert('Error: ' + result.message);
        }
      } catch (err) {
        console.error(err);
        alert('Error saving self assessment. Please try again.');
      }
    });

    // Close modal when clicking outside
    window.onclick = function(event) {
      const modal = document.getElementById('selfAssessmentModal');
      if (event.target === modal) {
        closeSelfAssessmentModal();
      }
    }
    </script>
</body>
</html>

<%
function getPerformanceLevel(score) {
    if (score >= 6) return 'Outstanding Performance';
    if (score >= 5) return 'Superior Performance';
    if (score >= 4) return 'Effective Performance';
    if (score >= 3) return 'Standard Performance';
    if (score >= 2) return 'Developing Performance';
    return 'Ineffective Performance';
}
%>
