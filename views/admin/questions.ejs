<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Questions - Performance Management System</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <% if (user) { %>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">
                <h2>PMS - <%= user.role.toUpperCase() %></h2>
            </div>
            <div class="nav-menu">
                <span class="nav-user">
                    <i class="fas fa-user"></i>
                    <%= user.name %> (<%= user.employeeId %>)
                </span>
                <form action="/auth/logout" method="POST" style="display: inline;" onsubmit="return handleLogout(this)">
                    <button type="submit" class="btn btn-outline">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </form>
            </div>
        </div>
    </nav>
    <% } %>

    <main class="main-content">
        <div class="admin-page">
            <div class="page-header">
                <h1>Manage Review Questions</h1>
                <a href="/admin/dashboard" class="btn btn-outline">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-error">
                    <%= error %>
                </div>
            <% } %>
            
            <div class="admin-grid">
                <div class="admin-card">
                    <h3>Add New Question</h3>
                    <form action="/admin/questions" method="POST" class="admin-form">
                        <div class="form-group">
                            <label for="text">Question Text</label>
                            <textarea id="text" name="text" rows="3" required 
                                placeholder="Enter the review question..."></textarea>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label for="questionFor">Question For</label>
                                <select id="questionFor" name="questionFor" required onchange="toggleDepartmentField()">
                                    <option value="">Select Target User</option>
                                    <option value="employee">Employee</option>
                                    <option value="hod">HOD (Low Level)</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="questionType">Question Type</label>
                                <select id="questionType" name="questionType" required onchange="toggleInputTypeField()">
                                    <option value="">Select Question Type</option>
                                    <option value="review">Review Question</option>
                                    <option value="self-assessment">Self-Assessment Question</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="category">Category</label>
                                <select id="category" name="category" required>
                                    <option value="">Select Category</option>
                                    <option value="performance">Performance</option>
                                    <option value="quiz">Quiz</option>
                                    <option value="attendance">Attendance</option>
                                    <option value="late_remark">Late Remark</option>
                                    <option value="behaviour">Behaviour</option>
                                    <option value="extra">Extra</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group" id="departmentGroup" style="display: block;">
                                <label for="department">
                                    <span id="departmentLabel">Department (Optional - for Employees)</span>
                                </label>
                                <select id="department" name="department">
                                    <option value="">Global (All Departments)</option>
                                    <% departments.forEach(dept => { %>
                                        <option value="<%= dept._id %>">
                                            <% if (dept.parentDepartment) { %><%= dept.parentDepartment.name %> - <% } %><%= dept.name %>
                                        </option>
                                    <% }) %>
                                </select>
                            </div>

                            <!-- Added month dropdown to assign questions to specific months -->
                            <div class="form-group">
                                <label for="month">Month (Optional - leave blank for all months)</label>
                                <select id="month" name="month">
                                    <option value="">All Months</option>
                                    <% for (let m = 1; m <= 12; m++) { %>
                                        <option value="M<%= m %>">Month <%= m %> (M<%= m %>)</option>
                                    <% } %>
                                </select>
                            </div>

                            <div class="form-group" id="inputTypeGroup" style="display: none;">
                                <label for="inputType">Input Type (for Self-Assessment)</label>
                                <!-- added 'numeric' option for numeric questions -->
                                <select id="inputType" name="inputType" onchange="toggleOptionsField()">
                                    <option value="text">Short Text</option>
                                    <option value="numeric">Numeric (Numbers Only)</option>
                                    <option value="textarea">Long Text</option>
                                    <option value="radio">Radio Buttons</option>
                                    <option value="checkbox">Checkboxes</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group" id="optionsGroup" style="display: none;">
                            <label for="options">Options (one per line, for Radio/Checkbox only)</label>
                            <textarea id="options" name="options" rows="4" 
                                placeholder="Option 1&#10;Option 2&#10;Option 3"></textarea>
                        </div>
                        
                        <!-- Added Editable Response checkbox -->
                        <div class="form-group">
                            <label style="display: flex; align-items: center; gap: 0.5rem;">
                                <input type="checkbox" id="editableResponse" name="editableResponse">
                                <span>Editable Response (Allow response changes after submission)</span>
                            </label>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add Question
                        </button>
                    </form>
                </div>
                
                <div class="admin-card">
                    <h3>Existing Questions</h3>
                    
                    <!-- Added filter section for Question Type and Department -->
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-bottom: 1.5rem; padding: 1rem; background-color: #f5f5f5; border-radius: 5px;">
                        <div style="display: flex; flex-direction: column;">
                            <label for="filterQuestionType" style="font-weight: bold; margin-bottom: 0.5rem; font-size: 0.9rem;">
                                <i class="fas fa-filter"></i> Filter by Question Type
                            </label>
                            <select id="filterQuestionType" style="padding: 0.5rem; border: 1px solid #ddd; border-radius: 3px; font-size: 0.9rem;" onchange="applyFilters()">
                                <option value="">All Question Types</option>
                                <option value="review">Review Questions</option>
                                <option value="self-assessment">Self-Assessment Questions</option>
                            </select>
                        </div>

                        <div style="display: flex; flex-direction: column;">
                            <label for="filterDepartment" style="font-weight: bold; margin-bottom: 0.5rem; font-size: 0.9rem;">
                                <i class="fas fa-building"></i> Filter by Department
                            </label>
                            <select id="filterDepartment" style="padding: 0.5rem; border: 1px solid #ddd; border-radius: 3px; font-size: 0.9rem;" onchange="applyFilters()">
                                <option value="">All Departments</option>
                                <option value="global">Global Questions</option>
                                <% departments.forEach(dept => { %>
                                    <option value="<%= dept._id %>">
                                        <% if (dept.parentDepartment) { %><%= dept.parentDepartment.name %> - <% } %><%= dept.name %>
                                    </option>
                                <% }) %>
                            </select>
                        </div>
                    </div>

                    <div class="questions-list">
                        <% questions.forEach(question => { %>
                            <div class="question-item" data-question-type="<%= question.questionType %>" data-department="<%= question.department ? question.department._id : 'global' %>">
                                <div class="question-header">
                                    <span class="question-category category-<%= question.category %>">
                                        <%= question.category.replace('_', ' ').toUpperCase() %>
                                    </span>
                                    <span class="question-type" style="background-color: <%= question.questionType === 'self-assessment' ? '#4CAF50' : '#2196F3' %>; color: white; padding: 0.25rem 0.5rem; border-radius: 3px; font-size: 0.8rem;">
                                        <%= question.questionType === 'self-assessment' ? 'SELF-ASSESSMENT' : 'REVIEW' %>
                                    </span>
                                    <span class="question-target" style="background-color: <%= question.questionFor === 'hod' ? '#FF5722' : '#9C27B0' %>; color: white; padding: 0.25rem 0.5rem; border-radius: 3px; font-size: 0.8rem;">
                                        <%= question.questionFor === 'hod' ? 'HOD (Low Level)' : 'EMPLOYEE' %>
                                    </span>
                                    <span class="question-scope">
                                        <% if (question.department) { %>
                                            <% if (question.department.parentDepartment) { %><%= question.department.parentDepartment.name %> - <% } %><%= question.department.name %>
                                        <% } else { %>
                                            Global
                                        <% } %>
                                    </span>
                                    <!-- Added month display for questions -->
                                    <% if (question.month) { %>
                                        <span class="question-month" style="background-color: #FF9800; color: white; padding: 0.25rem 0.5rem; border-radius: 3px; font-size: 0.8rem;">
                                            <%= question.month %>
                                        </span>
                                    <% } %>
                                </div>
                                <div class="question-text">
                                    <%= question.text %>
                                </div>
                                <% if (question.questionType === 'self-assessment' && question.inputType) { %>
                                    <div class="question-input-type" style="margin-top: 0.5rem; font-size: 0.85rem; color: #666;">
                                        <strong>Input Type:</strong> 
                                        <!-- display 'Numeric' for numeric input type -->
                                        <% if (question.inputType === 'numeric') { %>
                                            Numeric (Numbers Only)
                                        <% } else { %>
                                            <%= question.inputType %>
                                        <% } %>
                                        <% if ((question.inputType === 'radio' || question.inputType === 'checkbox') && question.options && question.options.length > 0) { %>
                                            <div style="margin-top: 0.5rem; padding: 0.5rem; background-color: white; border-radius: 3px;">
                                                <strong>Options:</strong>
                                                <ul style="margin: 0.5rem 0; padding-left: 1.5rem;">
                                                    <% question.options.forEach(opt => { %>
                                                        <li><%= opt %></li>
                                                    <% }) %>
                                                </ul>
                                            </div>
                                        <% } %>
                                    </div>
                                <% } %>
                                <!-- Display Editable Response status -->
                                <% if (question.editableResponse) { %>
                                    <div style="margin-top: 0.5rem; padding: 0.5rem; background-color: #E8F5E9; border-radius: 3px; font-size: 0.85rem; color: #2E7D32;">
                                        <i class="fas fa-edit"></i> <strong>Editable Response</strong> - Responses can be modified after submission
                                    </div>
                                <% } %>
                                <div class="question-meta">
                                    <small>Created by: <%= question.createdBy ? question.createdBy.name : 'System' %> on <%= new Date(question.createdAt).toLocaleDateString() %></small>
                                </div>
                                <div class="question-actions" style="margin-top: 1rem; display: flex; gap: 0.5rem;">
                                    <a href="/admin/questions/<%= question._id %>/edit" class="btn btn-primary" style="display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.5rem 1rem; font-size: 0.85rem;">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <button type="button" class="btn btn-danger" style="display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.5rem 1rem; font-size: 0.85rem; background-color: #dc3545; color: white; border: none; border-radius: 5px; cursor: pointer;" onclick="deleteQuestion('<%= question._id %>', '<%= question.text.replace(/'/g, "\\'") %>')">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </div>
                            </div>
                        <% }) %>
                        <% if (questions.length === 0) { %>
                            <p>No questions found</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="/js/main.js"></script>
    <script>
    function toggleDepartmentField() {
        const questionFor = document.getElementById('questionFor').value;
        const departmentGroup = document.getElementById('departmentGroup');
        const departmentLabel = document.getElementById('departmentLabel');
        const departmentSelect = document.getElementById('department');
        
        if (questionFor === 'hod') {
            departmentGroup.style.display = 'block';
            departmentLabel.textContent = 'Department - Select department HODs (Low Level) to create questions for';
            departmentSelect.required = true;
        } else if (questionFor === 'employee') {
            departmentGroup.style.display = 'block';
            departmentLabel.textContent = 'Department (Optional - for Employees)';
            departmentSelect.required = false;
        } else {
            departmentGroup.style.display = 'none';
            departmentSelect.required = false;
        }
    }

    function toggleInputTypeField() {
        const questionType = document.getElementById('questionType').value;
        const inputTypeGroup = document.getElementById('inputTypeGroup');
        
        if (questionType === 'self-assessment') {
            inputTypeGroup.style.display = 'block';
            toggleOptionsField();
        } else {
            inputTypeGroup.style.display = 'none';
            document.getElementById('optionsGroup').style.display = 'none';
        }
    }

    function toggleOptionsField() {
        const inputType = document.getElementById('inputType').value;
        const optionsGroup = document.getElementById('optionsGroup');
        
        if (inputType === 'radio' || inputType === 'checkbox') {
            optionsGroup.style.display = 'block';
        } else {
            optionsGroup.style.display = 'none';
        }
    }

    function handleLogout(form) {
        const button = form.querySelector('button');
        const originalText = button.innerHTML;
        button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Logging out...';
        button.disabled = true;
        
        return true;
    }

    function deleteQuestion(questionId, questionText) {
        if (confirm(`Are you sure you want to delete the question: "${questionText}"?\n\nThis action cannot be undone.`)) {
            fetch(`/admin/questions/${questionId}/delete`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Show success message and reload
                    alert('Question deleted successfully');
                    window.location.reload();
                } else {
                    alert('Error deleting question: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Error deleting question');
            });
        }
    }

    function applyFilters() {
        const filterQuestionType = document.getElementById('filterQuestionType').value;
        const filterDepartment = document.getElementById('filterDepartment').value;
        const questionItems = document.querySelectorAll('.question-item');
        let visibleCount = 0;

        questionItems.forEach(item => {
            const itemQuestionType = item.getAttribute('data-question-type');
            const itemDepartment = item.getAttribute('data-department');

            // Check if item matches filters
            const matchesQuestionType = !filterQuestionType || itemQuestionType === filterQuestionType;
            const matchesDepartment = !filterDepartment || itemDepartment === filterDepartment;

            // Show item only if it matches both filters (both filters must pass or be empty)
            if (matchesQuestionType && matchesDepartment) {
                item.style.display = 'block';
                visibleCount++;
            } else {
                item.style.display = 'none';
            }
        });

        // Show "no results" message if no questions match filters
        if (visibleCount === 0) {
            const questionsList = document.querySelector('.questions-list');
            const noResultsMsg = questionsList.querySelector('.no-results-message');
            
            if (noResultsMsg) {
                noResultsMsg.style.display = 'block';
            } else {
                const msg = document.createElement('p');
                msg.className = 'no-results-message';
                msg.style.color = '#999';
                msg.style.fontStyle = 'italic';
                msg.style.padding = '1rem';
                msg.innerHTML = '<i class="fas fa-search"></i> No questions match the selected filters.';
                questionsList.appendChild(msg);
            }
        } else {
            const noResultsMsg = document.querySelector('.no-results-message');
            if (noResultsMsg) {
                noResultsMsg.style.display = 'none';
            }
        }
    }
    </script>
</body>
</html>
