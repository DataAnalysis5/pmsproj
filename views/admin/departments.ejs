<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Departments - Performance Management System</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <% if (user) { %>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">
                <h2>PMS - <%= user.role.toUpperCase() %></h2>
            </div>
            <div class="nav-menu">
                <span class="nav-user">
                    <i class="fas fa-user"></i>
                    <%= user.name %> (<%= user.employeeId %>)
                </span>
                <form action="/auth/logout" method="POST" style="display: inline;" onsubmit="return handleLogout(this)">
                    <button type="submit" class="btn btn-outline">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </button>
                </form>
            </div>
        </div>
    </nav>
    <% } %>

    <main class="main-content">
        <div class="admin-page">
            <div class="page-header">
                <h1>Manage Departments</h1>
                <a href="/admin/dashboard" class="btn btn-outline">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-error">
                    <%= error %>
                </div>
            <% } %>
            
            <div class="admin-grid">
                <div class="admin-card">
                    <h3>Add New Department</h3>
                    <form action="/admin/departments" method="POST" class="admin-form">
                        <div class="form-group">
                            <label for="name">Department Name</label>
                            <input type="text" id="name" name="name" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea id="description" name="description" rows="3"></textarea>
                        </div>
                        
                        <div class="form-group">
                            <label for="parentDepartment">Parent Department (Optional)</label>
                            <select id="parentDepartment" name="parentDepartment">
                                <option value="">Main Department</option>
                                <% mainDepartments.forEach(dept => { %>
                                    <option value="<%= dept._id %>"><%= dept.name %></option>
                                <% }) %>
                            </select>
                            <small>Leave empty to create a main department, or select a parent to create a sub-department</small>
                        </div>
                        
                        <div class="form-group">
                            <label for="hods">Assign HODs (Multiple Selection)</label>
                            <select id="hods" name="hods" multiple size="5">
                                <% hods.forEach(hod => { %>
                                    <option value="<%= hod._id %>"><%= hod.name %> (<%= hod.employeeId %>)</option>
                                <% }) %>
                            </select>
                            <small>Hold Ctrl/Cmd to select multiple HODs</small>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add Department
                        </button>
                    </form>
                </div>
                
                <div class="admin-card">
                    <h3>Existing Departments</h3>
                    <div class="table-container">
                        <table class="admin-table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>HODs</th>
                                    <th>Description</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% departments.forEach(dept => { %>
                                    <tr>
                                        <td>
                                            <strong>
                                                <%= dept.parentDepartment ? '└─ ' : '' %><%= dept.name %>
                                            </strong>
                                            <% if (dept.parentDepartment) { %>
                                                <br><small class="text-muted">Under: <%= dept.parentDepartment.name %></small>
                                            <% } %>
                                        </td>
                                        <td>
                                            <span class="dept-type <%= dept.parentDepartment ? 'sub-dept' : 'main-dept' %>">
                                                <%= dept.parentDepartment ? 'Sub-Department' : 'Main Department' %>
                                            </span>
                                        </td>
                                        <td>
                                            <% if (dept.hods && dept.hods.length > 0) { %>
                                                <% dept.hods.forEach((hod, index) => { %>
                                                    <%= hod.name %> (<%= hod.employeeId %>)<% if (index < dept.hods.length - 1) { %><br><% } %>
                                                <% }) %>
                                            <% } else { %>
                                                <span class="text-muted">No HODs assigned</span>
                                            <% } %>
                                        </td>
                                        <td><%= dept.description || 'No description' %></td>
                                        <td><%= new Date(dept.createdAt).toLocaleDateString() %></td>
                                        <td>
                                            <a href="/admin/departments/<%= dept._id %>/edit" class="btn btn-sm btn-outline">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                                <% if (departments.length === 0) { %>
                                    <tr><td colspan="6">No departments found</td></tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="/js/main.js"></script>
    <script>
    function handleLogout(form) {
        const button = form.querySelector('button');
        const originalText = button.innerHTML;
        button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Logging out...';
        button.disabled = true;
        
        // Allow form submission to proceed
        return true;
    }
    </script>
</body>
</html>
